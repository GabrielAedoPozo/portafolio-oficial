<script>
  // app.js

if (typeof window !== "undefined" && "IntersectionObserver" in window) {
  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        entry.target.style.setProperty("--delay", index);
        entry.target.classList.add(entry.target.dataset.animation || "fade-up");
        
        // Si es el elemento typing, iniciamos el efecto después de un delay
        if (entry.target.id === "typing") {
          setTimeout(() => {
            startTypingEffect();
          }, 800); // Esperar a que termine la animación de entrada
        }
        
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Función para el efecto typing
  function startTypingEffect() {
    const typingEl = document.getElementById("typing");
    if (typingEl) {
      const text = "Hey, soy Gabriel Aedo";
      let i = 0;
      
      // Crear el contenedor del cursor
      const cursor = document.createElement('span');
      cursor.className = 'typing-cursor';
      cursor.textContent = '|';
      
      function type() {
        if (i <= text.length) {
          typingEl.innerHTML = text.slice(0, i) + cursor.outerHTML;
          i++;
          setTimeout(type, 100);
        } else {
          // Mantener el cursor parpadeando al final
          typingEl.innerHTML = text + cursor.outerHTML;
        }
      }
      
      // Limpiar el contenido inicial y empezar
      typingEl.innerHTML = cursor.outerHTML;
      setTimeout(type, 300);
    }
  }

  // Seleccionar elementos para animar
  document
    .querySelectorAll(
      ".role, .typing, .subtitle, .circle, .project-card, .stack svg, .contact-links a, .section-title, .about-text, .square"
    )
    .forEach((el) => {
      el.classList.add("hidden");
      observer.observe(el);
    });

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();
      document.querySelector(this.getAttribute("href")).scrollIntoView({
        behavior: "smooth",
      });
    });
  });

  // Form validation and reset
  const form = document.querySelector(".contact-form");
  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      try {
        const response = await fetch(form.action, {
          method: "POST",
          body: formData,
        });

        if (response.ok) {
          form.reset();
          alert("Mensaje enviado con éxito!");
        }
      } catch (error) {
        console.error("Error:", error);
      }
    });
  }
}

